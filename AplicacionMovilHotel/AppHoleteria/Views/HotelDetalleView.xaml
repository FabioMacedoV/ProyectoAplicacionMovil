<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplicacionMovilHotel.AppHoleteria.Views.HotelDetalleView">
    <ContentPage.Content>
		<StackLayout Padding="20">
			<Image Source="{Binding ImagenUrl}" HeightRequest="200" Aspect="AspectFill"/>
			<Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="24" TextColor="Black"/>
			<Label Text="{Binding Descripcion}" FontSize="16" TextColor="Gray"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>